# Telegram Bot Token (get from @BotFather)
BOT_TOKEN=your_telegram_bot_token_here

# Database URL (PostgreSQL)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
# Example: postgresql://postgres:password@localhost:5432/x1_wallet_bot
DATABASE_URL=postgresql://postgres:password@localhost:5432/x1_wallet_bot

# X1 Blockchain RPC URL (SVM-based)
# X1 uses Solana Virtual Machine, so it's compatible with Solana tools
X1_RPC_URL=https://rpc.mainnet.x1.xyz

# Polling interval in milliseconds (default: 15000 = 15 seconds)
POLL_INTERVAL=15000

# Block Explorer URL
EXPLORER_URL=https://explorer.x1-mainnet.infrafc.org

# Rate Limiting & Performance Settings
# Watcher concurrency: how many wallets to check simultaneously (default: 3)
# Lower = less RPC pressure, Higher = faster updates
WATCHER_CONCURRENCY=3

# Security scan timeout in milliseconds (default: 30000 = 30 seconds)
SECURITY_SCAN_TIMEOUT=30000

# Cache TTL in seconds (default: 300 = 5 minutes)
CACHE_TTL_SHORT=300

# RPC retry settings
RPC_MAX_RETRIES=3
RPC_RETRY_DELAY=1000

# Health check settings
HEALTH_CHECK_PORT=3000
HEALTH_CHECK_ENABLED=true

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_PERFORMANCE_METRICS=true
ENABLE_RPC_METRICS=true

# Alert System - Add your Telegram user ID to receive monitoring alerts
# Get your ID by messaging @userinfobot on Telegram
# Multiple admins: separate with commas (e.g., 123456789,987654321)
ADMIN_USER_IDS=

# Optional: X1 Testnet RPC URL (for testing)
# X1_RPC_URL=https://x1-testnet.infrafc.org
# EXPLORER_URL=https://explorer.x1-testnet.infrafc.org
