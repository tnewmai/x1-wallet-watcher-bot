# ======================================
# X1 Wallet Watcher Bot - Optimized Configuration
# ======================================

# Required Configuration
# ----------------------
BOT_TOKEN=your_telegram_bot_token_here
X1_RPC_URL=https://rpc.mainnet.x1.xyz

# Basic Settings
# ----------------------
POLL_INTERVAL=15000
EXPLORER_URL=https://explorer.x1-mainnet.xen.network

# Performance Tuning (NEW - Optimized Defaults)
# ----------------------
# Watcher concurrency: How many wallets to check simultaneously
# Higher = faster but more RPC load. Recommended: 3-5
WATCHER_CONCURRENCY=3

# RPC retry configuration
RPC_MAX_RETRIES=3
RPC_RETRY_DELAY=1000

# Cache TTL (seconds)
CACHE_TTL_SHORT=300

# Timeout for security scans (milliseconds)
SECURITY_SCAN_TIMEOUT=30000

# Health Check (NEW)
# ----------------------
HEALTH_CHECK_PORT=3000
HEALTH_CHECK_ENABLED=true

# Monitoring & Logging (NEW)
# ----------------------
LOG_LEVEL=info
ENABLE_PERFORMANCE_METRICS=true
ENABLE_RPC_METRICS=true

# Security (Optional)
# ----------------------
DISABLE_AUTO_SECURITY_SCAN=false

# Advanced Tuning (Expert Users Only)
# ----------------------
# Connection pool size: 3 connections (hardcoded for optimal balance)
# Cache size: 5000 entries (hardcoded)
# Storage flush interval: 30s (hardcoded)
# Cache cleanup interval: 5min (hardcoded)
